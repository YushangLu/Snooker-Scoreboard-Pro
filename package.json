{
  "name": "snooker-scoreboard-pro",
  "version": "1.0.2",
  "private": true,
  "description": "A comprehensive Snooker Scoreboard application.",
  "author": "Lucian tech",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "build": {
    "appId": "com.snooker.scoreboard.pro",
    "productName": "Snooker Scoreboard Pro",
    "files": [
      "dist/**/*",
      "main.js",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "dir"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.sports",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}